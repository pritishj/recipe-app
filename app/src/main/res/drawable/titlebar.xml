<?xml version="1.0" encoding="utf-8"?>

<!-- this code is used to customize the titlebar style -->

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <!-- titlebar in normal -->
    <item>
        <shape>
            <gradient 
                android:startColor="#B80000"
                android:centerColor="#8F0000"
                android:endColor="#660000"
                android:angle="-90"/>
            <padding
                android:left="5dip"
                android:top="10dip"
                android:right="10dip"
                android:bottom="10dip"/>
        </shape>
    </item>

</selector>