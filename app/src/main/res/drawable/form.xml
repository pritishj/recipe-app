<?xml version="1.0" encoding="utf-8"?>

<!-- this code is used to customize the form style -->

<selector
	xmlns:android="http://schemas.android.com/apk/res/android">
	
    <!-- when search form pressed -->
	<item android:state_pressed="true">
		<shape>
			<gradient
                android:startColor="#A3A3A3"
                android:centerColor="#D2D2D2"
                android:endColor="#EBEBEB"
                android:angle="270"
            />
			<stroke
				android:width="1dip"
				android:color="#E6E6E6"
			/>
			<corners
				android:radius="5dip"
			/>
			<padding
				android:left="10dip"
				android:right="10dip"
				android:top="10dip"
				android:bottom="10dip"
			/>
		</shape>
	</item>	
	
	<!-- when search form focused -->
	<item android:state_focused="true">
		<shape>
			<gradient
                android:startColor="#A3A3A3"
                android:centerColor="#D2D2D2"
                android:endColor="#EBEBEB"
                android:angle="270"
            />
			<stroke
				android:width="1dip"
				android:color="#E6E6E6"
			/>
			<corners
				android:radius="5dip"
			/>
			<padding
				android:left="10dip"
				android:right="10dip"
				android:top="10dip"
				android:bottom="10dip"
			/>
		</shape>
	</item>	
	
	<!-- when search form in normal -->
	<item>
		<shape>
			<gradient
                android:startColor="#B2B2B2"
                android:centerColor="#E6E6E6"
                android:endColor="#ffffff"
                android:angle="270"
            />
			<stroke
				android:width="1dip"
				android:color="#E6E6E6"
			/>
			<corners
				android:radius="5dip"
			/>
			<padding
				android:left="10dip"
				android:right="10dip"
				android:top="10dip"
				android:bottom="10dip"
			/>
		</shape>
	</item>	
</selector>
